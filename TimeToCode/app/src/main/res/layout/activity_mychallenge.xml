<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MychallengeActivity">

    <FrameLayout
        android:id="@+id/certificateToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/backCertification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#623dff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="인증센터"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/black"/>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/challengeImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#111111"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/challengeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TITIE"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/challengeImage"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/oneCommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="(1일 1커밋을 해보자!)"
            android:textColor="#555555"
            app:layout_constraintTop_toBottomOf="@id/challengeTitle"
            app:layout_constraintLeft_toRightOf="@id/challengeImage"/>
        <TextView
            android:id="@+id/setter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="생성자"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/oneCommit"
            app:layout_constraintLeft_toRightOf="@id/challengeImage"/>
        <Button
            android:id="@+id/certificateButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_of_rounded_button"
            android:text="인증하기"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/challengeImage"
            app:layout_constraintTop_toBottomOf="@id/setter"/>
        <Button
            android:id="@+id/galleryButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_of_rounded_button"
            android:text="갤러리"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/setter"
            app:layout_constraintLeft_toRightOf="@id/certificateButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

